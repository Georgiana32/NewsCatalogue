{% extends 'base.html.twig' %}

{% block title %}Saved news{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    <div class="example-wrapper">
        <h1>Saved news</h1>

        <a class="btn btn-primary mb-3 mt-2" href="/parse/" role="button">Back</a>

        {% for item in savednews %}
            <div class="card mb-2">
                <div class="card-header d-flex w-100 justify-content-between">
                    <h4 class="mb-1"><a href="{{ item.link }}" style="color: black">{{ item.title }}</a></h4>
                    <small>{{ item.pubDate|date("d/m/Y H:m:s") }}</small>
                </div>
                <div class="card-body">
                    <h5 class="card-title">{{ item.description }}</h5>
                    <p class="card-text">{{ item.creator.name }}</p>
                    <div class="d-flex w-100 justify-content-between">
                        <div class="category mr-4">
                            {% for cat in item.category %}
                                <span class="text-muted" style="font-size: small">{{ cat.name }}</span>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        <br>
    </div>


{% endblock %}